{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true
  },
  "files": ["src/index.ts"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
