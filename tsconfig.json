{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/index.d.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
